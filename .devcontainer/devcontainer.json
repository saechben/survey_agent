{
  "name": "A2A",
  "build": { "dockerfile": "Dockerfile" },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "remoteUser": "root",
  "updateRemoteUserUID": false,

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        // Point VS Code at the Poetry-created venv
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  },

  // Install your deps automatically when the container is created
  "postCreateCommand": "if [ -f pyproject.toml ]; then poetry install --no-interaction --no-ansi; fi"
}